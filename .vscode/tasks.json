{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "jai ${workspaceFolder}/src/first.jai",
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": [
                {
                    "severity": "error",
                    "fileLocation": "absolute",
                    "pattern": [
                        {
                            "regexp": "^(.*):(\\d+),(\\d+).*Error: (.*)$",
                            "file": 1,
                            "line": 2,
                            "column": 3,
                            "message": 4
                        }
                    ],
                    "owner": "jai"
                },
                {
                    "severity": "info",
                    "fileLocation": "absolute",
                    "pattern": [
                        {
                            "regexp": "^(.*):(\\d+),(\\d+).*Info: (.*)$",
                            "file": 1,
                            "line": 2,
                            "column": 3,
                            "message": 4
                        }
                    ],
                    "owner": "jai"
                },
                {
                    "severity": "info",
                    "fileLocation": "absolute",
                    "pattern": [
                        {
                            "regexp": "^(.*)\\((.*):(\\d+)\\)$",
                            "file": 2,
                            "line": 3,
                            "message": 1,
                        }
                    ],
                    "owner": "jai"
                },
            ],
            "group": "build",
        },
        {
            "label": "run",
            "type": "shell",
            "command": " ${workspaceFolder}/bin/sloubi-chess",
            // "command": " ${workspaceFolder}/bin/sloubi-chess -pgn ./assets/pgns/benko-revealed-intro.pgn",
            // "command": " ${workspaceFolder}/bin/sloubi-chess -pgn ./assets/pgns/test-fen-and-comments.pgn",
            // "command": " ${workspaceFolder}/bin/sloubi-chess -pgn ./assets/pgns/opera-game.pgn",
            "options": {
                "env": {
                    "VK_LAYER_PATH": "${workspaceFolder}/lava/bindings/Vulkan/layers",
                    "LD_LIBRARY_PATH": "${workspaceFolder}/lava/bindings/Shaderc:${env:LD_LIBRARY_PATH}",
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true,
            },
            "dependsOn": ["build"]
        }
    ]
}