{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "jai ${workspaceFolder}/src/first.jai",
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": [
                {
                    "severity": "error",
                    "fileLocation": "absolute",
                    "pattern": [
                        {
                            "regexp": "^(.*):(\\d+),(\\d+).*Error: (.*)$",
                            "file": 1,
                            "line": 2,
                            "column": 3,
                            "message": 4
                        }
                    ],
                    "owner": "jai"
                },
                {
                    "severity": "warning",
                    "fileLocation": "absolute",
                    "pattern": [
                        {
                            "regexp": "^(.*):(\\d+),(\\d+).*Warning: (.*)$",
                            "file": 1,
                            "line": 2,
                            "column": 3,
                            "message": 4
                        }
                    ],
                    "owner": "jai"
                },
                {
                    "severity": "info",
                    "fileLocation": "absolute",
                    "pattern": [
                        {
                            "regexp": "^(.*):(\\d+),(\\d+).*Info: (.*)$",
                            "file": 1,
                            "line": 2,
                            "column": 3,
                            "message": 4
                        }
                    ],
                    "owner": "jai"
                },
                {
                    "severity": "info",
                    "fileLocation": "absolute",
                    "pattern": [
                        {
                            "regexp": "^(.*)\\((.*):(\\d+)\\)$",
                            "file": 2,
                            "line": 3,
                            "message": 1,
                        }
                    ],
                    "owner": "jai"
                },
            ],
            "group": {
                "kind": "build",
                "isDefault": false,
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "${workspaceFolder}/sloubi-chess",
            // "command": "${workspaceFolder}/sloubi-chess -noCache",
            // "command": "${workspaceFolder}/sloubi-chess -pgn ./assets/demo/library/Compositions.pgn",
            // "command": "${workspaceFolder}/sloubi-chess -pgn ./assets/pgns/benko-revealed-intro.pgn",
            // "command": "${workspaceFolder}/sloubi-chess -pgn \"./assets/demo/library/Naroditsky's Principles of Chess Endgames/01 - King Activity.pgn\"",
            // "command": "${workspaceFolder}/sloubi-chess -pgn \"./assets/demo/library/Longest possible game.pgn\"",
            // "command": "${workspaceFolder}/sloubi-chess -pgn ./assets/pgns/opera-game.pgn",
            // "command": "${workspaceFolder}/sloubi-chess -pgn ~/.sloubi-chess/library/breush-game.pgn",
            "options": {
                "env": {
                    "VK_LAYER_PATH": "${workspaceFolder}/lava/bindings/Vulkan/layers",
                    "LD_LIBRARY_PATH": "${workspaceFolder}/lava/bindings/Shaderc:${workspaceFolder}/lava/bindings/Vulkan/layers:${env:LD_LIBRARY_PATH}",
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true,
            },
            "dependsOn": ["build"],
        }
    ]
}